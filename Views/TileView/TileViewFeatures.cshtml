@{
    ViewBag.Title = "TileView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>TileView Features:</h2>
<br/>
<li> Default</li>
<li> Theme - Flat-Saffron</li>
<br/>
<div id = "ControlRegion">
<div class="e-tile-group">
    <div class="e-tile-column">
        @Html.EJ().Tile("tile1").ImagePosition(TileImagePosition.Fill).TileSize(TileSize.Medium).ImageUrl("../Content/Images/TileView/windows/people_1.png").Text("People")
        <div class="e-tile-small-col-2">
            @Html.EJ().Tile("tile2").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Small).ImageUrl("../Content/Images/TileView/windows/alerts.png")
            @Html.EJ().Tile("tile3").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Small).ImageUrl("../Content/Images/TileView/windows/bing.png")
            @Html.EJ().Tile("tile4").TileSize(TileSize.Small).ImageUrl("../Content/Images/TileView/windows/camera.png")
            @Html.EJ().Tile("tile5").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Small).ImageUrl("../Content/Images/TileView/windows/messages.png")
        </div>
        @Html.EJ().Tile("tile6").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Medium).ImageUrl("../Content/Images/TileView/windows/games.png").Text("Play")
        @Html.EJ().Tile("tile7").TileSize(TileSize.Medium).ImageUrl("../Content/Images/TileView/windows/map.png").Text("Maps")
        @Html.EJ().Tile("tile8").ImagePosition(TileImagePosition.Fill).TileSize(TileSize.Wide).ImageUrl("../Content/Images/TileView/windows/sports.png").Text("Sports")
    </div>
    <div class="e-tile-column">
        @Html.EJ().Tile("tile9").ImagePosition(TileImagePosition.Fill).TileSize(TileSize.Medium).ImageUrl("../Content/Images/TileView/windows/people_2.png").Text("People")
        @Html.EJ().Tile("tile10").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Medium).ImageUrl("../Content/Images/TileView/windows/pictures.png").Text("Photo")
        @Html.EJ().Tile("tile11").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Wide).ImageUrl("../Content/Images/TileView/windows/weather.png").Text("Weather")
        @Html.EJ().Tile("tile12").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Medium).ImageUrl("../Content/Images/TileView/windows/music.png").Text("Music")
        @Html.EJ().Tile("tile13").ImagePosition(TileImagePosition.Center).TileSize(TileSize.Medium).ImageUrl("../Content/Images/TileView/windows/favs.png").Text("Favorites")
    </div>
</div>
</div>

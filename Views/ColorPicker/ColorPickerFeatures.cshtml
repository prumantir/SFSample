@{
    ViewBag.Title = "ColorPicker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ColorPicker Features:</h2>
<br />
<li> Default</li>
<li> Theme - Flat-Saffron</li>
<br/>
<div id = "ControlRegion">
<div class="frame ">
    <div class="control">
        <label>Choose a Color </label>
        @Html.EJ().ColorPicker("colorPicker").Value("#278787").ModelType(ModelType.Picker).ModelType(ModelType.Palette).ShowRecentColors(false)
    </div>
</div>
<style>
    .frame .control {
        margin-left: 70px;
    }
</style>
 </div>

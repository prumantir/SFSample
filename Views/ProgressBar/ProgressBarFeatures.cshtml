@{
    ViewBag.Title = "ProgressBar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ProgressBar Features:</h2>
<br/>
<li> Default</li>
<li> Theme - Flat-Saffron</li>
<br/>
<div id = "ControlRegion">
@Html.EJ().ProgressBar("rtlBar").Value(35).Height("20px").EnableRTL(false)
@section scripts
{
<script>
    var progress;
    $(document).ready(function () {
        progress = $("#rtlBar").data("ejProgressBar");
        progress.setModel({ text: progress.getPercentage() + " %" });
    });
</script>
}
</div>

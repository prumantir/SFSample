@{
    ViewBag.Title = "ScheduleFeatures";
}
<h2>ScheduleFeatures</h2>
<li> TimeMode</li>
<li> TimeZone</li>
<li> StartandEnd Hour</li>
<li> RTL</li>
<li> Keyboard Navigation</li>
<li> Localization - en-US</li>
<li> Theme - Flat-Saffron</li>
 <script src="@Url.Content("~/Scripts/ej/i18n/ej.culture.en-US.min.js")"></script>
    <script src="@Url.Content("~/Scripts/ej/i18n/ej.culture.fr-FR.min.js")"></script>

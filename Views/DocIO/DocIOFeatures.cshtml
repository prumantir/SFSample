@{
    ViewBag.Title = "DocIO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>DocIO Features:</h2>
<br />
<li> DocIO Features - Getting Started</li>
<br/><br/>
<div id = "ControlRegion">
@{Html.BeginForm("DocIOFeatures", "DocIO", FormMethod.Post);
  { 
    <div class="Common">
        <div class="tablediv">
            <div class="rowdiv">
                <label>
                    Click the button to view the Word document generated by Essential DocIO. Please
                    note that MS Word Viewer or MS Word is required to view the resultant document.</label>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        <strong>Save As :</strong></label>
                    <input type="radio" id="rdButtonWord97To2003" name="Group1" value="Word97To2003"/>
                    <label for="rdButtonWord97To2003">
                        Word 97-2003
                    </label>
                    <input type="radio" id="rdButtonWord2007" name="Group1" value="Word2007" />
                    <label for="rdButtonWord2007">
                        Word 2007
                    </label>
                    <input type="radio" id="rdButtonWord2010" name="Group1" value="Word2010" />
                    <label for="rdButtonWord2010">
                        Word 2010
                    </label>
                    <input type="radio" id="rdButtonWord2013" name="Group1" value="Word2013" checked="checked"/>
                    <label for="rdButtonWord2013">
                        Word 2013
                    </label>
                </div>
                <br />
                <div class="celldiv">
                    <input class="buttonStyle" type="submit" value="Generate Document" style="width: 200px;" />
                </div>
            </div>
            <br />
        </div>
    </div> 
      Html.EndForm();
  }}
</div>
